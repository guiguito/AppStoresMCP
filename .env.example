# App Store MCP Server Environment Configuration

# Server Configuration
PORT=3000
LOG_LEVEL=info
NODE_ENV=development

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Scraping Configuration
SCRAPING_TIMEOUT=30000
SCRAPING_RETRIES=3

# CORS Configuration
# CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Server Configuration
REQUEST_TIMEOUT=60000
ENABLE_LOGGING=true

# Transport Configuration
ENABLE_HTTP_TRANSPORT=true
ENABLE_SSE_TRANSPORT=true

# HTTPS Configuration (optional)
# HTTPS_ENABLED=false
# HTTPS_KEY_PATH=./ssl/server.key
# HTTPS_CERT_PATH=./ssl/server.crt
# HTTPS_CA_PATH=./ssl/ca.crt
# HTTPS_PASSPHRASE=

# SSE Configuration
SSE_HEARTBEAT_INTERVAL=30000
SSE_CONNECTION_TIMEOUT=300000
SSE_MAX_CONNECTIONS=100
SSE_AUTO_INITIALIZE=true
SSE_INITIALIZATION_TIMEOUT=5000

# =============================================================================
# TOOL CONFIGURATION
# =============================================================================

# Option 1: Disable specific tools (comma-separated list)
# DISABLED_TOOLS=google-play-app-reviews,app-store-app-reviews

# Option 2: Enable only specific tools (comma-separated list)
# If set, only these tools will be enabled, all others will be disabled
# ENABLED_TOOLS=google-play-search,app-store-search,google-play-app-details,app-store-app-details

# Option 3: Individual tool controls
# These override the bulk settings above

# Google Play Store Tools
# DISABLE_TOOL_GOOGLE_PLAY_APP_DETAILS=false
# DISABLE_TOOL_GOOGLE_PLAY_APP_REVIEWS=false
# DISABLE_TOOL_GOOGLE_PLAY_SEARCH=false
# DISABLE_TOOL_GOOGLE_PLAY_LIST=false
# DISABLE_TOOL_GOOGLE_PLAY_DEVELOPER=false
# DISABLE_TOOL_GOOGLE_PLAY_SUGGEST=false
# DISABLE_TOOL_GOOGLE_PLAY_SIMILAR=false
# DISABLE_TOOL_GOOGLE_PLAY_PERMISSIONS=false
# DISABLE_TOOL_GOOGLE_PLAY_DATASAFETY=false
# DISABLE_TOOL_GOOGLE_PLAY_CATEGORIES=false

# Apple App Store Tools
# DISABLE_TOOL_APP_STORE_APP_DETAILS=false
# DISABLE_TOOL_APP_STORE_APP_REVIEWS=false
# DISABLE_TOOL_APP_STORE_SEARCH=false
# DISABLE_TOOL_APP_STORE_LIST=false
# DISABLE_TOOL_APP_STORE_DEVELOPER=false
# DISABLE_TOOL_APP_STORE_PRIVACY=false
# DISABLE_TOOL_APP_STORE_SUGGEST=false
# DISABLE_TOOL_APP_STORE_SIMILAR=false
# DISABLE_TOOL_APP_STORE_RATINGS=false

# =============================================================================
# COMMON CONFIGURATIONS
# =============================================================================

# Search tools only
# ENABLED_TOOLS=google-play-search,app-store-search

# No review tools (disable reviews but keep everything else)
# DISABLED_TOOLS=google-play-app-reviews,app-store-app-reviews

# Google Play only (disable all App Store tools)
# DISABLED_TOOLS=app-store-app-details,app-store-app-reviews,app-store-search,app-store-list,app-store-developer,app-store-privacy,app-store-suggest,app-store-similar,app-store-ratings

# App Store only (disable all Google Play tools)
# DISABLED_TOOLS=google-play-app-details,google-play-app-reviews,google-play-search,google-play-list,google-play-developer,google-play-suggest,google-play-similar,google-play-permissions,google-play-datasafety,google-play-categories

# Core tools only (search and details)
# ENABLED_TOOLS=google-play-search,app-store-search,google-play-app-details,app-store-app-details