{
  "name": "app-store-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for app store scraping functionality",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "cross-env SKIP_EXTERNAL_API_TESTS=true jest",
    "test:all": "jest",
    "test:watch": "cross-env SKIP_EXTERNAL_API_TESTS=true jest --watch",
    "test:coverage": "cross-env SKIP_EXTERNAL_API_TESTS=true jest --coverage",
    "test:unit": "cross-env SKIP_EXTERNAL_API_TESTS=true jest --testPathIgnorePatterns=integration",
    "test:integration": "jest --testPathPatterns=integration --runInBand --detectOpenHandles",
    "test:integration:comprehensive": "jest tests/integration/comprehensive-tools.integration.test.ts --runInBand --detectOpenHandles --verbose",
    "test:integration:docker": "docker-compose -f docker/docker-compose.integration.yml --profile test up --build --abort-on-container-exit",
    "test:integration:local": "NODE_ENV=test npm run test:integration",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist",
    "generate-ssl": "./scripts/generate-ssl-certs.sh"
  },
  "keywords": [
    "mcp",
    "app-store",
    "scraper",
    "typescript",
    "node"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@types/json-schema": "^7.0.15",
    "@types/uuid": "^10.0.0",
    "app-store-scraper-ts": "^0.1.3",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "google-play-scraper-ts": "^0.1.3",
    "helmet": "^8.1.0",
    "node-fetch": "^3.3.2",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/eventsource": "^1.1.15",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.14",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "cross-env": "^10.1.0",
    "eslint": "^9.31.0",
    "eventsource": "^2.0.2",
    "jest": "^30.0.4",
    "supertest": "^7.1.3",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
